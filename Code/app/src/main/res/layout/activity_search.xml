<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/toolbarSearchActivity"
        android:background="@color/mediumBlue"
        android:navigationIcon="@drawable/round_arrow_back_ios_new_24">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:id="@+id/editTextSearchActivity"
                android:layout_toLeftOf="@id/linearLayoutSearchSearchActivity"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:textSize="16sp"
                android:hint="@string/searchSuggestion"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linearLayoutSearchSearchActivity"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingRight="8dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imgSearchSearchActivity"
                    android:src="@drawable/baseline_search_24"
                    android:padding="4dp"/>
            </LinearLayout>
        </RelativeLayout>
    </Toolbar>
</androidx.appcompat.widget.LinearLayoutCompat>